<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="86dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:layout_marginLeft="13dp"
                android:src="@drawable/pic" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="Awaiting General Document"
                android:textColor="#FF5722"
                android:textSize="18sp"
                android:textStyle="bold"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cusname"
                android:layout_width="282dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#003D3D3D"
                android:paddingLeft="15dp"
                android:paddingTop="0dp"
                android:text="Name"
                android:textColor="#80FF95"
                android:textSize="18sp" />

            <View
                android:layout_width="282dp"
                android:layout_height="0.5dp"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/nricno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="NRIC No"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/policyno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Policy No"
                android:textColor="#ffffff" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/dltbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"


                    android:text="Delete" />

                <View
                    android:id="@+id/view"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/editbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Edit" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
